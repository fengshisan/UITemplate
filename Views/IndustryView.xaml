<UserControl
    x:Class="UITemplate.Views.IndustryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UITemplate.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Control.Resources>
        <ImageBrush x:Key="leftImage" ImageSource="/Images/leftImage.png" />
        <ImageBrush x:Key="leftImageSub" ImageSource="/Images/leftImageSub.png" />
        <ImageBrush x:Key="topImage" ImageSource="/Images/topImage.png" />
        <Style x:Key="ToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Height" Value="80" />
            <Setter Property="HorizontalContentAlignment" Value="Right" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="10,10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Grid>
                            <Border
                                x:Name="border2"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                    RecognizesAccessKey="True"
                                    SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" Value="#FFd2e7f4" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="border2" Property="Background" Value="{StaticResource ResourceKey=leftImage}" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="border2" Property="Background" Value="#191E36" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RadioButtonStyle" TargetType="{x:Type RadioButton}">
            <Setter Property="Width" Value="180" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#4B8EC4" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinHeight" Value="50" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid
                            x:Name="templateRoot"
                            Background="Transparent"
                            SnapsToDevicePixels="True">
                            <Border x:Name="border2" />
                            <ContentPresenter
                                x:Name="contentPresenter"
                                Grid.Column="1"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"
                                ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Focusable="False"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasContent" Value="True">
                                <Setter Property="FocusVisualStyle">
                                    <Setter.Value>
                                        <Style>
                                            <Setter Property="Control.Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Rectangle
                                                            Margin="14,0,0,0"
                                                            SnapsToDevicePixels="True"
                                                            Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                                            StrokeDashArray="1 2"
                                                            StrokeThickness="1" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Padding" Value="4,-1,0,0" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}" />

                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="border2" Property="Background" Value="{StaticResource ResourceKey=topImage}">
                                    <!--<Setter.Value>
                                        <ImageBrush ImageSource="./images/back.png" />
                                    </Setter.Value>-->
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="border2" Property="Background" Value="Transparent" />
                                <Setter Property="Foreground" Value="#4B8EC4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ExpanderStyle" TargetType="Expander">
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Expander}">
                        <DockPanel>
                            <ToggleButton
                                x:Name="HeaderSite"
                                MinWidth="0"
                                MinHeight="0"
                                Margin="1"
                                Padding="{TemplateBinding Padding}"
                                HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Header}"
                                ContentTemplate="{TemplateBinding HeaderTemplate}"
                                DockPanel.Dock="Top"
                                FontFamily="{TemplateBinding FontFamily}"
                                FontSize="{TemplateBinding FontSize}"
                                FontStretch="{TemplateBinding FontStretch}"
                                FontStyle="{TemplateBinding FontStyle}"
                                FontWeight="{TemplateBinding FontWeight}"
                                Foreground="{TemplateBinding Foreground}"
                                IsChecked="{Binding IsExpanded, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                Style="{StaticResource ToggleButtonStyle}" />
                            <ContentPresenter
                                x:Name="ExpandSite"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                DockPanel.Dock="Left"
                                Focusable="false"
                                Visibility="Collapsed" />
                        </DockPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsExpanded" Value="true">
                                <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RadioMiniButtonStyle" TargetType="{x:Type RadioButton}">
            <Setter Property="Margin" Value="5,5,1,5" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#4B8EC4" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#101F3F" />
            <Setter Property="MinHeight" Value="50" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RadioButton}">
                        <Grid
                            x:Name="templateRoot"
                            Background="Transparent"
                            SnapsToDevicePixels="True">
                            <Border x:Name="border2" />
                            <ContentPresenter
                                x:Name="contentPresenter"
                                Margin="{TemplateBinding Padding}"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}"
                                ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                ContentTemplate="{TemplateBinding ContentTemplate}"
                                Focusable="False"
                                RecognizesAccessKey="True"
                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />

                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasContent" Value="True">
                                <Setter Property="FocusVisualStyle">
                                    <Setter.Value>
                                        <Style>
                                            <Setter Property="Control.Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Rectangle
                                                            Margin="14,0,0,0"
                                                            SnapsToDevicePixels="True"
                                                            Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                                            StrokeDashArray="1 2"
                                                            StrokeThickness="1" />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Padding" Value="4,-1,0,0" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}" />

                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Foreground" Value="White" />
                                <Setter TargetName="border2" Property="Background" Value="{StaticResource ResourceKey=leftImageSub}">
                                    <!--<Setter.Value>
                                        <ImageBrush ImageSource="./images/back.png" />
                                    </Setter.Value>-->
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="false">
                                <Setter TargetName="border2" Property="Background" Value="#101F3F" />
                                <Setter Property="Foreground" Value="#4B8EC4" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Control.Resources>
    <Grid Background="#0A0C22">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <!--  背景图片  -->
        <Border
            Grid.Row="1"
            Grid.Column="2"
            BorderBrush="#121F40"
            BorderThickness="1,1,0,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/rightImage.png" />
            </Border.Background>
        </Border>
        <Border
            Grid.RowSpan="2"
            Grid.Column="1"
            BorderBrush="#121f40"
            BorderThickness="1,0,1,1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/topback.png" />
            </Border.Background>
        </Border>
        <Border BorderBrush="#121F40" BorderThickness="1,1,1,0" />
        <Border
            Grid.Row="1"
            BorderBrush="#121F40"
            BorderThickness="1">
            <Border.Background>
                <ImageBrush ImageSource="/Images/leftback.png" />
            </Border.Background>
        </Border>

        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="/Fonts2/#iconfont"
            FontSize="26"
            Foreground="White"
            Text="&#xe612; 晶石信息数字车间">
            <TextBlock.Effect>
                <DropShadowEffect
                    Direction="0"
                    ShadowDepth="0"
                    Color="#7EFFFF" />
            </TextBlock.Effect>
        </TextBlock>

        <!--  左侧菜单  -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="10">
                <Expander Style="{DynamicResource ExpanderStyle}">
                    <Expander.Header>
                        <StackPanel
                            Height="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="/Fonts2/#iconfont"
                                FontSize="25"
                                Foreground="White"
                                Text="&#xe61b;" />
                            <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    Foreground="White"
                                    Text="全景视图" />
                                <TextBlock
                                    FontSize="15"
                                    Foreground="White"
                                    Text="Panoramic view" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel>
                            <RadioButton
                                Width="240"
                                Height="40"
                                Margin="5,10,1,5"
                                Content="设备驾驶舱"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="巡检中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="报警中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                        </StackPanel>
                    </Expander.Content>
                </Expander>
                <Expander Style="{DynamicResource ExpanderStyle}">
                    <Expander.Header>
                        <StackPanel
                            Height="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="-5,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="/Fonts2/#iconfont"
                                FontSize="25"
                                Foreground="White"
                                Text="&#xe614;" />
                            <StackPanel Margin="25,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    Foreground="White"
                                    Text="效率视图" />
                                <TextBlock
                                    FontSize="15"
                                    Foreground="White"
                                    Text="Efficancy view" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel>
                            <RadioButton
                                Width="240"
                                Height="40"
                                Margin="5,10,1,5"
                                Content="设备驾驶舱"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="巡检中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="报警中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                        </StackPanel>
                    </Expander.Content>
                </Expander>
                <Expander Style="{DynamicResource ExpanderStyle}">
                    <Expander.Header>
                        <StackPanel
                            Height="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="-15,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="/Fonts2/#iconfont"
                                FontSize="25"
                                Foreground="White"
                                Text="&#xe612;" />
                            <StackPanel Margin="25,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    Foreground="White"
                                    Text="能耗视图" />
                                <TextBlock
                                    FontSize="15"
                                    Foreground="White"
                                    Text="Energy view" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel>
                            <RadioButton
                                Width="240"
                                Height="40"
                                Margin="5,10,1,5"
                                Content="设备驾驶舱"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="巡检中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="报警中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                        </StackPanel>
                    </Expander.Content>
                </Expander>
                <Expander Style="{DynamicResource ExpanderStyle}">
                    <Expander.Header>
                        <StackPanel
                            Height="80"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <TextBlock
                                Margin="-15,0,0,0"
                                VerticalAlignment="Center"
                                FontFamily="/Fonts2/#iconfont"
                                FontSize="25"
                                Foreground="White"
                                Text="&#xe616;" />
                            <StackPanel Margin="25,0,0,0" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="20"
                                    Foreground="White"
                                    Text="监控设置" />
                                <TextBlock
                                    FontSize="15"
                                    Foreground="White"
                                    Text="Setting" />
                            </StackPanel>
                        </StackPanel>
                    </Expander.Header>
                    <Expander.Content>
                        <StackPanel>
                            <RadioButton
                                Width="240"
                                Height="40"
                                Margin="5,10,1,5"
                                Content="设备驾驶舱"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="巡检中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                            <RadioButton
                                Width="240"
                                Height="40"
                                Content="报警中心"
                                FontSize="18"
                                Foreground="White"
                                Style="{StaticResource RadioMiniButtonStyle}" />
                        </StackPanel>
                    </Expander.Content>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!--  顶部  -->
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <RadioButton Style="{StaticResource RadioButtonStyle}">
                <TextBlock Text="3D监控中心" />
            </RadioButton>
            <RadioButton Style="{StaticResource RadioButtonStyle}">
                <TextBlock Text="产线自动化" />
            </RadioButton>
            <RadioButton Style="{StaticResource RadioButtonStyle}">
                <TextBlock Text="数据中心" />
            </RadioButton>
            <RadioButton Style="{StaticResource RadioButtonStyle}">
                <TextBlock Text="设备管理器" />
            </RadioButton>
            <RadioButton Style="{StaticResource RadioButtonStyle}">
                <TextBlock Text="控制中心" />
            </RadioButton>
        </StackPanel>

        <!--  按钮  -->
        <StackPanel
            Grid.Column="2"
            HorizontalAlignment="Left"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                BorderThickness="0"
                FontSize="18"
                Foreground="#9A9CA7">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/buttonImage.png" />
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="/Fonts2/#iconfont"
                        Text="&#xe61a;" />
                    <TextBlock Text="登录" />
                </StackPanel>
            </Button>
            <Button
                Width="120"
                Height="50"
                Margin="10,0,10,0"
                BorderThickness="0"
                FontSize="18"
                Foreground="#9A9CA7">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/buttonImage.png" />
                </Button.Background>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        VerticalAlignment="Center"
                        FontFamily="/Fonts2/#iconfont"
                        Text="&#xe618;" />
                    <TextBlock Text="退出" />
                </StackPanel>
            </Button>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="2">

            <StackPanel
                Height="40"
                Margin="0,15,0,0"
                Orientation="Horizontal">
                <StackPanel.Background>
                    <ImageBrush ImageSource="/Images/timeback.png" />
                </StackPanel.Background>
                <TextBlock
                    Margin="15,0,0,0"
                    VerticalAlignment="Center"
                    FontFamily="fonts/#iconfont"
                    FontSize="22"
                    Foreground="#9A9CA7"
                    Text="&#xe619;  2018-05-10 12:35:02" />
                <Image
                    Width="30"
                    Height="30"
                    Margin="10,0,0,0"
                    Source="/Images/drop.png" />
            </StackPanel>

            <TextBlock
                Margin="15,10,0,0"
                FontSize="22"
                Foreground="White"
                Text="名称:电池箱体" />
            <TextBlock
                Margin="15,5,0,0"
                Foreground="#9A9CA7"
                Text="编号:C5041" />

            <Grid Height="130" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid
                    Width="100"
                    Height="100"
                    Background="Transparent">
                    <Ellipse Stroke="Gray" StrokeThickness="12" />
                    <Ellipse
                        RenderTransformOrigin="0.5,0.5"
                        StrokeDashArray="11.5,1000"
                        StrokeThickness="12">
                        <Ellipse.Stroke>
                            <LinearGradientBrush StartPoint="0.5,0.5" EndPoint="0,1">
                                <GradientStop Offset="1" Color="#1CEAF9" />
                                <GradientStop Offset="0" Color="#0A96E4" />
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                        <Ellipse.Effect>
                            <DropShadowEffect
                                BlurRadius="8"
                                Opacity="1"
                                ShadowDepth="0"
                                Color="WhiteSmoke" />
                        </Ellipse.Effect>

                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="-90" />
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        Foreground="White"
                        Text="50%">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="6"
                                ShadowDepth="0"
                                Color="White" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Grid>

                <UniformGrid Grid.Column="1" Rows="2">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="30"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="300">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="6"
                                    ShadowDepth="0"
                                    Color="White" />
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Foreground="#9A9CA7" Text="日实际产量" />
                    </StackPanel>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock
                            FontSize="20"
                            Foreground="White"
                            Text="300" />
                        <TextBlock Foreground="#9A9CA7" Text="日计划产量" />
                    </StackPanel>

                </UniformGrid>

            </Grid>

            <TextBlock
                Margin="10,5,0,0"
                Foreground="#9A9CA7"
                Text="不合格品数" />
            <UniformGrid
                Height="25"
                Margin="10,5,0,0"
                VerticalAlignment="Center">
                <TextBlock Foreground="White" Text="6.25%" />
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Foreground="#9A9CA7"
                    Text="20" />
            </UniformGrid>

            <Rectangle Height="3" Margin="10,0,10,0">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0.3,0">
                        <GradientStop Offset="0.25" Color="#ED2163" />
                        <GradientStop Offset="0.75" Color="#9A9CA7" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <TextBlock
                Margin="10,40,0,0"
                FontSize="15"
                Foreground="White"
                Text="累计停机时间" />
            <UniformGrid
                Height="30"
                Margin="10,15,0,0"
                VerticalAlignment="Center">
                <TextBlock Foreground="White" Text="激光切割机" />
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Foreground="#9A9CA7"
                    Text="90min" />
            </UniformGrid>

            <Rectangle Height="3" Margin="10,0,10,0">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Offset="0.0" Color="#DC8C17" />
                        <GradientStop Offset="0.25" Color="Yellow" />
                        <GradientStop Offset="0.75" Color="#9A9CA7" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <UniformGrid
                Height="30"
                Margin="10,5,0,0"
                VerticalAlignment="Center">
                <TextBlock Foreground="White" Text="折弯机" />
                <TextBlock
                    Margin="0,0,10,0"
                    HorizontalAlignment="Right"
                    Foreground="#9A9CA7"
                    Text="45min" />
